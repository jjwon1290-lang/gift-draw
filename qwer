<h1>ğŸ ìƒí’ˆ ë½‘ê¸° ì´ë²¤íŠ¸</h1>

<div id="slot">READY</div>

<button id="drawBtn" onclick="startDraw()">ë½‘ê¸° ì‹œì‘</button>

<script>
    const products = [
        { name: "1ë“±", weight: 40 },
        { name: "2ë“±", weight: 30 },
        { name: "3ë“±", weight: 20 },
        { name: "4ë“±", weight: 8 },
        { name: "ê½", weight: 2 }
    ];

    let interval;

    function pickProduct() {
        const total = products.reduce((sum, p) => sum + p.weight, 0);
        let r = Math.random() * total;

        for (let p of products) {
            if (r < p.weight) return p.name;
            r -= p.weight;
        }
    }

    function startDraw() {
        const slot = document.getElementById("slot");
        const button = document.getElementById("drawBtn");
        button.disabled = true;

        interval = setInterval(() => {
            slot.innerText = products[Math.floor(Math.random() * products.length)].name;
        }, 100);

        setTimeout(() => {
            clearInterval(interval);
            slot.innerText = pickProduct();
            button.disabled = false;
        }, 2500);
    }
</script>

